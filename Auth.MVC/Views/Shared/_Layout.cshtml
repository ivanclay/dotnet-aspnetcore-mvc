<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Auth.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Auth.MVC.styles.css" asp-append-version="true" />

    <style>
        /* Sidebar styles */
        #sidebar {
            position: fixed;
            top: 0;
            left: -250px;
            width: 250px;
            height: 100%;
            background-color: #f8f9fa;
            border-right: 1px solid #ddd;
            transition: left 0.3s ease;
            z-index: 1000;
            padding-top: 60px;
        }

        #sidebar.open {
            left: 0;
        }

        #sidebarToggle {
            position: fixed;
            top: 10px;
            left: 10px;
            z-index: 1100;
        }

        body.sidebar-open {
            padding-left: 250px;
        }
    </style>
</head>
<body>
    <button id="sidebarToggle" class="btn btn-outline-secondary">☰ Menu</button>

    <div id="sidebar">
        <div class="sidebar-header text-center p-3 border-bottom">
            <img src="~/images/logo.png" alt="Auth.MVC Logo" class="img-fluid" style="max-height: 80px;" />
        </div>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="d-flex justify-content-center align-items-center p-3">
                <h5 class="text-center">
                    Bem vindo, @User.Identity.Name
                </h5>
            </div>
        }
        <ul class="nav flex-column p-3">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </li>
            <li class="nav-item mt-3">
                @if (Context.Request.Cookies["access_token"] != null)
                {
                    <form asp-controller="Auth" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger w-100 text-start">Sair</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-outline-primary w-100 text-start" asp-controller="Auth" asp-action="Login">Login</a>
                }
            </li>
        </ul>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container">
            &copy; 2025 - Auth.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        const toggleBtn = document.getElementById("sidebarToggle");
        const sidebar = document.getElementById("sidebar");
        toggleBtn.addEventListener("click", function () {
            sidebar.classList.toggle("open");
            document.body.classList.toggle("sidebar-open");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
